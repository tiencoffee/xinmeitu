$easeOut = cubic-bezier(0.33,1,0.68,1)
*
	-webkit-tap-highlight-color #0000
html
	height 100%
body
	height 100%
	word-break break-word
	overflow hidden
	overscroll-behavior none
	touch-action pan-x pan-y
	user-select none
img
	display block
	image-rendering -webkit-optimize-contrast
[disabled]
.disabled
	opacity .5
	pointer-events none
.aspect-2-3
	aspect-ratio 2/3
.aspect-square
	aspect-ratio 1
.anim--zoomIn
	animation anim--zoomIn .2s $easeOut
.anim--slideUp
	animation anim--slideUp .2s $easeOut
.anim--overlay
	animation anim--overlay .2s $easeOut
@keyframes anim--zoomIn
	from
		opacity 0
		transform scale(.8)
@keyframes anim--slideUp
	from
		transform translateY(100px)
@keyframes anim--overlay
	from
		background #0000
#viewerEl
	&::-webkit-scrollbar
		display none
#photoEl
	max-width unset
	margin-right -9999px
	margin-bottom -9999px
.photoEl--rotate-no
	height 100vh
.photoEl--rotate-yes
	width 100vh
	transform rotate(90deg) translateY(-100%)
